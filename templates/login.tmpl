<h1>{{.CompanyName}} - Login</h1>

<div class="alerts-container">
		{{if .Error}}
		<div class="alert error">
				{{.Error}}
		</div>
		{{end}}

		{{if .Success}}
		<div class="alert success">
				{{.Success}}
		</div>
		{{end}}
</div>

{{if .userEmail}}

<h2>Signed in as user with email address {{.userEmail}}</h2>
<h2>Redirecting in <span id="count">3</span> seconds...</h2>

<script type="text/javascript">
 // Countdown redirect
 setTimeout(function countdownFunc() {
		 var countDOM = document.getElementById("count");
		 var nextCount = parseInt(countDOM.innerHTML) - 1;
		 console.log("nextCount:", nextCount);
		 countDOM.innerHTML = nextCount;
		 if (nextCount > 0) {
				 setTimeout(countdownFunc, 1000);
		 } else {
				 location.href="/";
		 }
 }, 1000)
</script>

{{else}}

<form id="frmLogin" action="/login" method="POST">
		<div>
				<label for="email"></label>
				<input id="email" name="email" type="email"  placeholder="Email Address"/>
		</div>

		<div>
				<label for="password"></label>
				<input id="password" name="password" type="password"  placeholder="Password"/>
				<div>

					  <div>
						    <button type="submit">Login</button>
						    <p>Don't have a username/password? Maybe you should <a href="/register">register</a>?</p>
					  </div>
</form>

{{end}}
